<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="repasoSemana4.Vistas.Inicio">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ventana de Repaso" />
            <Image Source="https://univercimas.com/wp-content/uploads/2021/05/Logo-de-la-Universidad-Tecnologica-Israel-UTI-300x300.png"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Text="Usuario" FontSize="20" Grid.Row="0" Grid.Column="0"/>
                <Entry x:Name="txtUsuario" FontSize="20" Grid.Row="0" Grid.Column="1"/>
                <Label Text="Contraseña" FontSize="20" Grid.Row="1" Grid.Column="0"/>
                <Entry x:Name="txtContraseña" Placeholder="Password" FontSize="20" Grid.Row="1" Grid.Column="1" IsPassword="True"/>
            </Grid>
            <Button x:Name="bntIniciar" Text="INICIAR" Clicked="bntIniciar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>